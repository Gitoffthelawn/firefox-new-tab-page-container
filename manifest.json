{
  "manifest_version": 2,
  "name": "New Tab Page Container",
  "version": "1.5",
 
  "description": "Show contextual identities on new tab page",

  "icons": {
    "32": "icons/new-tab-32.png",
    "64": "icons/new-tab-64.png",
    "128": "icons/new-tab-128.png"
  },
  
  "browser_action": {
    "default_icon": "icons/new-tab-32.png",
    "default_title": "New Tab Page Container"
  },

  "permissions": [
    "contextualIdentities",
    "cookies",
    "tabs"
  ],
 
  "content_scripts": [
    {
      "matches": ["<all_urls>", "*://*/*"]
    }
  ],

  "chrome_url_overrides" : {
    "newtab": "new-tab-page.html"
  },

  "background": {
    "scripts": [ "background.js" ]
  }
}